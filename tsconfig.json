{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": false,
    "isolatedModules": true,
    "declaration": true,
    "jsx": "react",
    "lib": ["es2020", "dom"],
    "module": "CommonJS",
    "noImplicitAny": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "target": "ES2020"
  },
  "include": ["src/**/*", "./typings.d.ts"]
}
